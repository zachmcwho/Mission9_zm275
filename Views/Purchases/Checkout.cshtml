
@{
}

@model Purchase

<h2>Check out now</h2>

<p>Enter details below:</p>

<form method="post" asp-controller="Purchases" asp-action="Checkout">
    <h4>Ship To</h4>

    <div class="form-group">
        <label asp-for="Name">Name</label><input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label><input asp-for="AddressLine1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2:</label><input asp-for="AddressLine2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressLine3">Address Line 3:</label><input asp-for="AddressLine3" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City">City:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="State">State:</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Zip">Zip:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="checkbox">
        <label>
            <input asp-for="Anonymous" /> Donate Anonymously</label>
    </div>
    <div class="float-end">
        <input type="submit" class="btn-primary" value="Submit Purchase Order" />
    </div>
</form>